# ================================================================================================
# üìä COVERAGE CONFIGURATION
# ================================================================================================

# Coverage Provider Selection (override default "internal" ‚Üí "codecov")
GO_COVERAGE_PROVIDER=codecov

# Codecov Configuration
CODECOV_TOKEN_REQUIRED=true

# Coverage Exclusion Paths
# Combines base exclusions with codecov.yml ignore paths for consistency
GO_COVERAGE_EXCLUDE_PATHS=test/,vendor/,testdata/,.github/,.mage-cache/,.vscode/,bin/,example/,examples/,mocks/,testing/,plans/,docs/

# Skip URL Checks in Coverage Reports
GO_COVERAGE_SKIP_URL_CHECKS=true
